      <div class="table-responsive">
        <table class="table table-bordered table-dark table-hover">
          <thead>
            <tr>
              <th scope="col">DAY</th>
              <th scope="col">ENTRY</th>
              <th scope="col">EXIT</th>
              <th scope="col">LUNCH</th>
              <th scope="col">HOURS DAY</th>
              <th scope="col">DATE</th>
              <th scope="col">PROPERTY</th>
            </tr>
          </thead>
          <tbody>      
  
              <% 
  
                let monday='',tuesday='',wednesday='',thursday='',friday='',saturday='',sunday='';
                

                Object.keys(results).forEach(key => {  
                  
                  if (results[key].day=='monday'){
                    monday = results[key];                                    
                  }
                  
                  if (results[key].day=='tuesday'){
                    tuesday = results[key];                                     
                  }
  
                  if (results[key].day=='wednesday'){
                    wednesday = results[key];                                     
                  }
                  
                  if (results[key].day=='thursday'){
                    thursday = results[key];                                     
                  }
  
                  if (results[key].day=='friday'){
                    friday = results[key];                                     
                  }
                
                  if (results[key].day=='saturday'){
                    saturday = results[key];                                     
                  }
                  
                  if (results[key].day=='sunday'){
                    sunday = results[key];                                     
                  }

                
                })
              %>                      
  
              <tr>
                  <th scope="row">Monday</th>
                  <td><%= monday['entry'] %></td>      
                  <td><%= monday['exit'] %></td>
                  <td><%= monday['lunch'] %></td>
                  <td><%= monday['hoursDay'] %></td>
                  <td><%= (monday['date']) ? monday['date'].toLocaleDateString("en-EN") : '' %></td>
                  <td><%= monday['property'] %></td>
              </tr>
  
              <tr>
                <th scope="row">Tuesday</th>
                <td><%= tuesday['entry'] %></td>      
                <td><%= tuesday['exit'] %></td>
                <td><%= tuesday['lunch'] %></td>
                <td><%= tuesday['hoursDay'] %></td>
                <td><%= (tuesday['date']) ? tuesday['date'].toLocaleDateString("en-EN") : '' %></td>
                <td><%= tuesday['property'] %></td>
              </tr>
  
              <tr>
                <th scope="row">Wednesday</th>
