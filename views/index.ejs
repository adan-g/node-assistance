                <td><%= thursday['entry'] %></td>      
                <td><%= thursday['exit'] %></td>
                <td><%= thursday['lunch'] %></td>
                <td><%= thursday['hoursDay'] %></td>
                <td><%= (thursday['date']) ? thursday['date'].toLocaleDateString("en-EN") : '' %></td>
                <td><%= thursday['property'] %></td>
              </tr>
  
              <tr>
                <th scope="row">Friday</th>
                <td><%= friday['entry'] %></td>      
                <td><%= friday['exit'] %></td>
                <td><%= friday['lunch'] %></td>
                <td><%= friday['hoursDay'] %></td>
                <td><%= (friday['date']) ? friday['date'].toLocaleDateString("en-EN") : '' %></td>
                <td><%= friday['property'] %></td>
              </tr>
  
              <tr>
                <th scope="row">Saturday</th>
                <td><%= saturday['entry'] %></td>      
                <td><%= saturday['exit'] %></td>
                <td><%= saturday['lunch'] %></td>
                <td><%= saturday['hoursDay'] %></td>
                <td><%= (saturday['date']) ? saturday['date'].toLocaleDateString("en-EN") : '' %></td>
