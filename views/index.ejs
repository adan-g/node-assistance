                <td><%= wednesday['exit'] %></td>
                <td><%= wednesday['lunch'] %></td>
                <td><%= wednesday['hoursDay'] %></td>
                <td><%= (wednesday['date']) ? wednesday['date'].toLocaleDateString("en-EN") : '' %></td>
                <td><%= wednesday['property'] %></td>
              </tr>
  
              <tr>
